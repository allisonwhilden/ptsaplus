{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install -g pnpm && cd app && pnpm install",
  "buildCommand": "cd app && pnpm build",
  "devCommand": "cd app && pnpm dev",
  "outputDirectory": "app/.next",
  "functions": {
    "app/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "github": {
    "autoDeployment": true
  }
}