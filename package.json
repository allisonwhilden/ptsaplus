    "start": "pnpm --filter app start",
    "lint": "pnpm --filter app lint",
    "type-check": "pnpm --filter app type-check",
    "clean": "pnpm --filter app run clean && rm -rf node_modules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allisonwhilden/ptsaplus.git"
  },
  "keywords": ["ptsa", "school", "volunteer", "management"],
