{
  "name": "ptsaplus-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PTSA+ Platform - Modern PTSA management system",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter app dev",
